<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="formhead">Edit '<%= post.name %>'</h1>
        <div style="width: 60%; margin: 25px auto;">
            <form action="/post/<%= post._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="post[name]" value="<%= post.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="post[image]" value="<%= post.image %>">
                </div>
                <div class="form-group">
                    <textarea id="contentarea" class="form-control" rows="10" type="text" name="post[content]"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/">Go back!</a>
        </div>
    </div>
</div>
<!-- show content in textarea -->
<script type="text/javascript">
   document.getElementById("contentarea").value = "<%= post.content %>";
</script>
<% include ../partials/footer %>